{
  "name": "new-drama-control",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/bun": "latest",
    "lefthook": "^1.13.6"
  },
  "scripts": {
    "schema:generate": "bun run generate-schema.ts",
    "build:linux": "bun build ./index.ts --compile --outfile ./dist/new-drama-control-linux-x64 --target bun-linux-x64",
    "build:windows": "bun build ./index.ts --compile --outfile ./dist/new-drama-control-windows-x64.exe --target bun-windows-x64",
    "build:macos-intel": "bun build ./index.ts --compile --outfile ./dist/new-drama-control-darwin-x64 --target bun-darwin-x64",
    "build:macos-arm": "bun build ./index.ts --compile --outfile ./dist/new-drama-control-darwin-arm64 --target bun-darwin-arm64"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "grammy": "^1.38.3",
    "jsonpath-plus": "^10.3.0",
    "zod": "^4.1.12"
  }
}
